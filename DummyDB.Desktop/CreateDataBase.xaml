<Window x:Class="DummyDB.Desktop.CreateDataBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba5"
        mc:Ignorable="d"
        Title="Window1" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2"> Введите название базы данных:</TextBlock>
        <TextBox Name ="nameDB" Grid.Column="3" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="2" Grid.Column="1">Вы выбрали:</TextBlock>
        <TextBox x:Name="SpasiISoxrani" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"></TextBox>
        <TextBox x:Name="folder" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Height="20" Width="300" HorizontalAlignment="Right"  VerticalAlignment="Top"></TextBox>
        <Button Click="OK" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="4"  Grid.Row="3" Width="65" Height="20">Сохранить</Button>
    </Grid>
</Window>
